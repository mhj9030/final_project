<?xml version="1.0" encoding="UTF-8"?>  
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd
		http://www.springframework.org/schema/security
		http://www.springframework.org/schema/security/spring-security-4.2.xsd">


	<context:component-scan base-package="com.final_project"/>
    
	<http auto-config="true" use-expressions="true">
	        <csrf disabled="true"/>
	        <headers>
	            <frame-options policy="SAMEORIGIN" />
	            <hsts disabled="true"/>
        	</headers>
	        
            <!-- 모든 접근자를 항상 승인 -->
            <intercept-url pattern="/submain" access="permitAll"/>
            <intercept-url pattern="/index.jsp" access="permitAll"/>
            <intercept-url pattern="/main" access="permitAll"/>
            <intercept-url pattern="/" access="permitAll"/>
            <intercept-url pattern="/member/login_check" access="permitAll"/>
            <intercept-url pattern="/member/register" access="permitAll"/>
            <intercept-url pattern="/member/signin" access="permitAll"/>
            <intercept-url pattern="/final_project/member/login_check" access="permitAll"/>

            <!-- 이미지, javascript, css등 -->
			<intercept-url pattern="/resources/**" access="permitAll" />
	        
	         <!-- 모든 페이지 -->
	        <intercept-url pattern="/profile/**" access="hasAnyRole('ROLE_USER','ROLE_COMPANY')"/>
	        <intercept-url pattern="/community/**" access="hasAnyRole('ROLE_USER','ROLE_COMPANY')"/>
	        <intercept-url pattern="/help_layout/**" access="hasAnyRole('ROLE_USER','ROLE_COMPANY')"/>
	        <intercept-url pattern="/employ/**" access="hasAnyRole('ROLE_USER','ROLE_COMPANY')"/>
	        <intercept-url pattern="/talent/**" access="hasRole('ROLE_COMPANY')"/>
	        <intercept-url pattern="/point/**" access="hasRole('ROLE_USER')"/>
	        
	        <intercept-url pattern="/member/scrap/**" access="hasAnyRole('ROLE_USER')"/>
	        <intercept-url pattern="/member/applications/**" access="hasAnyRole('ROLE_USER')"/>
	        <intercept-url pattern="/member/myInquiry/**" access="hasAnyRole('ROLE_USER')"/>
	        
	        <intercept-url pattern="/company/search/**" access="hasAnyRole('ROLE_USER','ROLE_COMPANY')"/>
	        <intercept-url pattern="/company/created/**" access="hasAnyRole('ROLE_USER','ROLE_COMPANY')"/>
	        <intercept-url pattern="/company/gover_news/**" access="hasAnyRole('ROLE_USER','ROLE_COMPANY')"/>
	        <intercept-url pattern="/company/gover_job/**" access="hasAnyRole('ROLE_USER','ROLE_COMPANY')"/>
	        <intercept-url pattern="/company/employ/**" access="hasRole('ROLE_COMPANY')"/>
	        <intercept-url pattern="/company/applicant/**" access="hasRole('ROLE_COMPANY')"/>
	        <intercept-url pattern="/company/inquiry/created" access="hasRole('ROLE_USER')"/>
	        <intercept-url pattern="/company/inquiry/createdSubmit" access="hasRole('ROLE_USER')"/>
	        <intercept-url pattern="/company/inquiry/**" access="hasRole('ROLE_COMPANY')"/>
			

	        <!--  사용자 정의 로그인 폼  -->
	        <form-login login-page="/"
	             login-processing-url="/member/login_check"
	             username-parameter="mId"
	             password-parameter="mPwd"
	             authentication-failure-url="/?login_error" 
	             default-target-url="/main"
	             always-use-default-target="false"
	             authentication-success-handler-ref="authenticationSuccessHandler"/>
	        
	        <logout logout-url="/member/logout"
	                     invalidate-session="true"
	                     logout-success-url="/main"/>
	        
	        <!-- 접근 권한이 없는 경우 -->
	        <access-denied-handler error-page="/member/noAuthorized"/>
	        
	         <!-- 동일 아이디로 동시에 1명만 접속(기존 세션 만료) -->
			<session-management>
				<concurrency-control max-sessions="1"/>
			</session-management>	        
	</http>

     <beans:bean id="authenticationSuccessHandler"
             class="com.final_project.member.MyAuthenticationSuccessHandler">
           <beans:property name="defaultTargetUrl" value="/main" />
	       <beans:property name="alwaysUseDefaultTargetUrl" value="true"/>
      </beans:bean>
      
     <jdbc-user-service 
         data-source-ref="dataSource"
         id="userService"
         users-by-username-query="SELECT mId AS username, mPwd AS password, 1 enabled FROM member WHERE mId=?"
         authorities-by-username-query="SELECT mId AS username, authority AS authority FROM memberAuthority WHERE mId=?"/>
    
	<authentication-manager>
		<authentication-provider user-service-ref="userService">
		     <password-encoder hash="sha-256" />
		</authentication-provider>
	</authentication-manager>

</beans:beans>
